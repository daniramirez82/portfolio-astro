---
import ProjectCard from "../UI/ProjectCard.astro";

const projects = await Astro.glob("../../content/projects/*.md");
const projectsToRender = projects.map( i => i.frontmatter).sort(( a, b ) => a.rate - b.rate);


---

<div class="flex flex-col mt-24">
  <h2 class="text-yellow-600 text-5xl -tracking-wide font-bold">
    Lasted Projects
  </h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-16 mt-8">
    {
      projectsToRender.map((p) => {
        return (
            <ProjectCard info={p} />
        );
      })
    }
  </div>
</div>
