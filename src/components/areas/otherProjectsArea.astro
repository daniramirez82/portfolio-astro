---
import OthersProjectCard from "../UI/OthersProjectCard.astro";
const projects = await Astro.glob("../../content/others-projects/*.md");
const projectsToRender = projects
  .map((i) => i.frontmatter)
  .sort((a, b) => a.rate - b.rate);
---


  <div class="flex flex-col mt-36">
    <h2 class="text-yellow-600 text-4xl -tracking-wide font-bold mb-4">
      Others Projects
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-16 mt-8">
      {
        projectsToRender.map((p) => {
          return <OthersProjectCard info={p} />;
        })
      }
    </div>
  </div>

