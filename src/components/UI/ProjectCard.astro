---
import ButtonMain from "./buttons/ButtonMain.astro";
import ButtonCat from "./buttons/ButtonCat.astro";
import Code from "./icons/Code.astro";
import Demo from "./icons/Demo.astro";
const {title, image, description, cates, linkCode, linkDemo} = Astro.props.info;
---

<div class="w-full flex flex-col">
  <!-- image card -->
  <div>
    <img class="object-cover min-w-full" src={image} alt={title} />
  </div>
  <!-- card content -->
  <div>
    <h2 class="text-2xl tracking-tight font-bold text-yellow-600 mt-4">
      {title}
    </h2>
    <div class="flex pr-1 mt-2 space-x-2">
      {
        cates.map((cate) => {
          return <ButtonCat cate={cate} />;
        })
      }
    </div>
    <p class="mt-4">{description}</p>
    <div class="flex space-x-4 mt-4">
      <ButtonMain link={linkCode} label='Code'> <Code/> </ButtonMain>
      <ButtonMain link={linkDemo} label='Demo'> <Demo/> </ButtonMain>
    </div>
  </div>
</div>
