---
import ButtonMain from "./buttons/ButtonMain.astro";
import Clip from "./icons/Clip.astro";
const rrss = [
  { name: "github", link: "https://github.com/daniramirez82" },
  { name: "twitter", link: "https://twitter.com/fabricgo" },
  { name: "ig", link: "" },
  { name: "linkedin", link: "https://www.linkedin.com/in/daniel-ramirez-3b7463269/" },
  { name: "youtube", link: "" },
];
---

<div class="lg:flex mt-40 lg:mt-24">
  <!-- la mano-->
  <div class="lg:flex-1 relative hidden lg:block">
    <img
      class="absolute right-12 lg:min-w-[130%] xl:min-w-[230%] -top-[12%]"
      src="/images/hand.png"
      alt="hand"
    />
  </div>

  <div
    class="flex lg:flex-1 flex-col text-stone-900 w-full lg:min-w-[550px] md:max-w-md mt-16 mx-auto"
  >
    <h1 class="text-5xl -tracking-wide font-bold">I’m Daniel Ramírez</h1>
    <p class="text-2xl tracking-tight font-bold mt-4">
      <span class="text-yellow-600"
        >Frontend Developer And Designer Student.<br /></span
      > I´m learning everything about Web Technologies and Product Design.
    </p>
    <div class="flex justify-between mt-4">
      <div class="flex flex-wrap" id="Portfolio">
        {
          rrss.map((i) => (
            <a href={i.link} target="_blank" class="[&:nth-child(4)]:p-2 w-10">
              <img
                class="w-10 cursor-pointer"
                src={`/images/icons/rrss/${i.name}.svg`}
                alt={`${i.name} logo`}
              />{" "}
            </a>
          ))
        }
      </div>
      <ButtonMain link = 'Ramirez_Daniel.pdf' download = "Daniel Ramirez.pdf" cat='clip' label='Download CV' >
        <Clip/>
      </ButtonMain>
    </div>
  </div>
  <div class="lg:flex-1"></div>
</div>
 